# Mecris MCP Server Configuration

# Server Configuration
PORT=8000
DEBUG=false

# Obsidian MCP Integration
OBSIDIAN_MCP_HOST=localhost
OBSIDIAN_MCP_PORT=3001
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Beeminder API Configuration
BEEMINDER_USERNAME=your_username
BEEMINDER_AUTH_TOKEN=your_auth_token
BEEMINDER_API_BASE=https://www.beeminder.com/api/v1

# Twilio SMS Configuration (from twilio_sender.py)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_TO_NUMBER=+1987654321
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Reminder Delivery Configuration
REMINDER_DELIVERY_METHOD=console  # Options: console, sms, whatsapp, both
REMINDER_ENABLE_FALLBACK=true     # If primary method fails, try alternatives
REMINDER_TEST_MODE=false          # If true, messages go to console instead of delivery

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=mecris.log

# Claude Usage Monitoring (placeholder for future)
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_BUDGET_LIMIT=1.00
CLAUDE_USAGE_ALERT_THRESHOLD=0.80